<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/wallet_holo_blue_light"
    android:layout_height="match_parent">
     <ImageView
         android:layout_width="match_parent"
         android:layout_height="294dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="10dp"
         android:src="@drawable/polokwanestatueofmuscians"
         android:scaleType="fitXY"/>


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAlignment="center"
         android:layout_gravity="center"
         android:textColor="#000"
         android:textSize="16sp"
         android:layout_marginLeft="15dp"
         android:text="More info"/>
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="15dp"
         android:text="Right in the center of the city we offer everyone a happy, a relaxing placing. The city offer the park full of space to relax or chill right in the city. The park offer chairs to sit on just under the warm city weather filled with beautiful sculpures of our city history"/>
     <fragment xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:map="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools"
         android:id="@+id/map"
         android:name="com.google.android.gms.maps.SupportMapFragment"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         tools:context="com.example.codetribe.polokwanetourguide.MapsActivity" />

</LinearLayout>